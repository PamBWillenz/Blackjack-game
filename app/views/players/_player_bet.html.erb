<div id="<%= dom_id(player, :bet) %>">
  <p class="player-name-label">Balance: $<strong><%= player.balance %></strong></p>
  <p class="player-name-label">Bet: <strong><%= player.bet %></strong></p>
  <div class="bet-chips-container">
    <% [5,10,25,50,100].each do |amt| %>
    <% disabled = player.balance <= 0 %>
    <%= button_to amt, bet_player_path(player, amount: amt), method: :post, form: { data: { turbo: true } }, class: "chip", disabled: disabled %>
    <% end %>
  </div>
  <div class="mt-2">
    <%= button_to "Reset Balance", reset_balance_player_path(player), method: :post, form: { data: { turbo: true } }, class: "btn-action" %>
  </div>
</div>